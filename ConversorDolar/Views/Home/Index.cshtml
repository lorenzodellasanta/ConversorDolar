@{
    var resultado = TempData["Resultado"];
}
@model ConversorDolar.Models.Conversor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Conversor de Moedas</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div>
        <header class="header">
            <h1>Conversor de Moedas</h1>
            <nav>
                <a href="historico">Histórico</a>
            </nav>
            <hr />
        </header>
    </div>
    <div class="converter"style="margin-top:5%;">

        <form asp-controller="Home" asp-action="ProcessForm" method="post">
        <label for="name" style="margin-top:1px; font-weight:bold;">Valor:</label>
            <input asp-for="FormValor" type="number" placeholder="Digite o valor" min="0" step="0.01" />
        <br/>
        <label for="name" style="margin-top:1px; font-weight: bold; right: 50px;">De:</label>
            <select id="CurrencyDe" name="CurrencyDe" class="select">
                Select...
        @if(@Model.Currencies != null)
        {
            <option value="">Select...</option>
            @foreach(var item in @Model.Currencies)
            {
                <option value="@item">@item</option>
            }
        }
        </select>
        <br/>
        <label for="name" style="margin-top:1px; font-weight: bold;">Para:</label>
        <select id="CurrencyPara" name="CurrencyPara" class="select">Select...
        @if (@Model.Currencies != null)
        {
            <option value="">Select...</option>
            @foreach (var item in @Model.Currencies)
            {
                <option value="@item">@item</option>
            }
        }
        </select>
        <br/>
        <button type="submit">Converter</button>
        <br/>
            <h3>@resultado</h3>
        </form>
    </div>

</body>
</html>
