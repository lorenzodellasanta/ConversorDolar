@{
    ViewData["Title"] = "Home Page";
}
@model ConversorDolar.Models.ExchangeRateResult


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Conversor de Real para Dólar</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="converter">
        <form asp-controller="Home" asp-action="ProcessForm" method="post">
        <h2>Conversor de Real para Dólar</h2>
        <label for="real">Valor em Real (R$):</label>
            <input asp-for="FormData"type="number" placeholder="Digite o valor em Real" min="0" step="0.01"/>
        <button type="submit">Converter</button>
        </form>
    </div>

</body>
</html>
