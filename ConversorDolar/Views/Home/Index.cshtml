@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Conversor de Real para Dólar</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="converter">
        <h2>Conversor de Real para Dólar</h2>
        <label for="real">Valor em Real (R$):</label>
        <input type="number" id="real" placeholder="Digite o valor em Real" min="0" step="0.01">
        <button onclick="converter()">Converter</button>
        <p id="resultado"></p>
    </div>

    <script src="script.js"></script>
</body>
</html>
